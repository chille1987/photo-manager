<% if notice %>
  <div class="flash-message notice" data-controller="flash-message">
    <p><%= notice %></p>
    <a href="#">
      <%= svg "icons/xmark-regular", width: 14 %>
    </a>
  </div>
<% end %>

<% if alert %>
  <div class="flash-message alert" data-controller="flash-message">
    <p><%= alert %></p>
    <a href="#">
      <%= svg "icons/xmark-regular", width: 14 %>
    </a>
  </div>
<% end %>